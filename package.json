{
	"name": "xplorescan",
	"description": "Never memorize a blockchain explorer again.",
	"keywords": [
		"blockchain",
		"scanner",
		"explorer",
		"cli",
		"tool",
		"command-line",
		"web3",
		"ethereum"
	],
	"version": "0.1.5",
	"author": "Waren Gonzaga",
	"license": "GPL-3.0",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "babel --out-dir=dist source",
		"dev": "babel --out-dir=dist --watch source",
		"clean": "rm -rf dist",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"ink-ascii": "^0.0.4",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^11.0.0",
		"open": "^10.0.3",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/preset-react": "^7.18.6",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"babel-plugin-inline-json-import": "^0.3.2",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"xo": "^0.53.1"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"nodeArguments": [
			"--loader=import-jsx"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			"@babel/preset-react"
		],
		"plugins": [
			"inline-json-import"
		]
	}
}

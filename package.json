{
	"name": "xplorescan",
	"description": "Never memorize a blockchain explorer again.",
	"version": "0.1.8",
	"author": "Waren Gonzaga",
	"license": "GPL-3.0",
	"keywords": [
		"blockchain",
		"scanner",
		"explorer",
		"cli",
		"tool",
		"command-line",
		"web3",
		"ethereum"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/warengonzaga/xplorescan.git"
	},
	"bugs": {
		"url": "https://github.com/warengonzaga/xplorescan/issues"
	},
	"homepage": "https://xplorescan.xyz",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "babel --out-dir=dist source",
		"dev": "babel --out-dir=dist --watch source",
		"clean": "rm -rf dist",
		"setup:ubuntu": "npm run clean && npm run build && npm i -g .",
		"reset:ubuntu": "npm uninstall -g xplorescan && npm run setup:ubuntu",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.4.1",
		"ink-ascii": "^0.0.4",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^13.2.0",
		"open": "^10.2.0",
		"react": "^18.3.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.25.12",
		"@babel/core": "^7.26.10",
		"@babel/preset-react": "^7.25.9",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.2.0",
		"babel-plugin-inline-json-import": "^0.3.2",
		"chalk": "^5.4.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.1.0",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.4.2",
		"xo": "^0.60.0"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"nodeArguments": [
			"--loader=import-jsx"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			"@babel/preset-react"
		],
		"plugins": [
			"inline-json-import"
		]
	}
}
